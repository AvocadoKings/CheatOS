// .dap = Dynamic Application Package //

// Tokens:

    assign/initialize: 
        int:        x = 10                                                              [KEY:'x', ASSIGN:'=', VALUE:'10']
        string:     y = "Hello"                                                         [KEY:'y', ASSIGN:'=', STRING:'Hello']

        add:        x = x + 9                                                           [KEY:'x', ASSIGN:'=', VALUE:'10', ASSIGN:'+', VALUE:'10']
        add string: y + " World!"                                                       [KEY:'y', ASSIGN:'+', STRING:' World!']

    if/else:
        if/else:    if (x > 7) do [instruction set] else [instruction set] end          [STATMENT:'if', CONDITION:[[KEY:'x', EVALUATE:'>', VALUE:'7']], STATMENT:'do', INSTRUCTION:[instruction set], STATMENT:'else', INSTRUCTION:[instruction set], STATMENT:'end']

    print:
        print int:  println (x)                                                         [CONSOLE:'println', KEY:'x']
        print str:  print (y)                                                           [CONSOLE:'print', KEY:'y']
// 

// example //

x = 10
y = 9

a = "Hello"
b = " World!"
c = ""

if (x>y) do
    c = a + b
else
    c = b + a
end

println (c)